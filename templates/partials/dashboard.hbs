<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <!--<title> Responsiive Admin Dashboard | CodingLab </title>-->
    <link rel="stylesheet" href="style.css" />
    <!-- Boxicons CDN Link -->
    <link
      href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <style>
      /* Googlefont Poppins CDN Link */
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }
      .sidebar {
        position: fixed;
        height: 100%;
        width: 240px;
        /* width: 60px; */
        /* background: #0a2558; */
        background: cornsilk;
        /* right: 20rem; */
        transition: all 0.5s ease;
      }
      .dashboardSlidesToLeft {
        position: fixed;
        height: 100%;
        
        width: 60px;
        background: #0a2558;
       
        
      }
      
      
      .sidebar .logo-details {
        height: 80px;
        display: flex;
        align-items: center;
      }
      .sidebar .logo-details i {
        font-size: 28px;
        font-weight: 500;
        /* color: #fff; */
        color: rgb(71, 222, 154);
        min-width: 60px;
        text-align: center;
      }
      .sidebar .logo-details .logo_name {
        color: rgb(71, 222, 154);
        font-size: 24px;
        font-weight: 500;
      }
      .sidebar .nav-links {
        margin-top: 10px;
      }
      .sidebar .nav-links li {
        position: relative;
        list-style: none;
        height: 50px;
      }
      .sidebar .nav-links li a {
        height: 100%;
        width: 100%;
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: all 0.4s ease;
      }
      .sidebar .nav-links li a.active {
        background: #081d45;
      }
      /* .active {
        background: #081d45;
      } */
      .sidebar .nav-links li a:hover {
        background: #081d45;
      }
      .sidebar .nav-links li i {
        min-width: 60px;
        text-align: center;
        font-size: 18px;
        color: rgb(71, 222, 154);
      }
      .sidebar .nav-links li a .links_name {
        color: rgb(71, 222, 154);
        font-size: 15px;
        font-weight: 600;
        white-space: nowrap;
      }

      .dashboardDisplay  .nav-links li a span,.dashboardDisplay .logo_name {
        display: none;
      }

      .sidebar .nav-links .log_out {
        position: absolute;
        bottom: 0;
        width: 100%;
      }

     

    </style>
  </head>
  <body>
    <div class="sidebar" id="dashboardSlideBar">
      <div class="logo-details">
        <i class="bx bxl-c-plus-plus"></i>
        <span class="logo_name">Carpool</span>
      </div>
      <ul class="nav-links">
        <li  class="nav-link-li">
          <a href="#" class="dashboardSlideBarLogo" >
            <!-- <i class="bx bx-menu" onclick="dashboardSlideBar()"></i> -->

            <i class="material-icons" style="font-size:30px;"onclick="dashboardSlideBar()">menu</i>
            <span class="links_name">Menu</span>
          </a>
        </li>
            
        <li class="nav-link-li">
          <a href="/myProfile" >
            <i class="material-icons" style="font-size:30px;">account_circle</i>
            <span class="links_name">My Profile</span>
          </a>
        </li>
        <li class="nav-link-li">
          <a href="/carpoolform">
            <i class="material-icons" style="font-size:30px;">dynamic_form</i>
            <span class="links_name">Carpool Form</span>
          </a>
        </li>
        <li class="nav-link-li">
          <a href="/filter">
            <i class="material-icons" style="font-size:30px;">search</i>
            <span class="links_name">Filter Page</span>
          </a>
        </li>
        <li class="nav-link-li">
          <a href="/">
            <i class="material-icons" style="font-size:30px;">home</i>
            <span class="links_name">Home Page</span>
          </a>
        </li>
        <li>
          <a href="/helpDesk" class="nav-link-li">
            <i class="material-icons" style="font-size:30px;">help</i>
            <span class="links_name">Help Desk</span>
          </a>
        </li>
        
        <li class="log_out">
          <a href="/">
            <i class="bx bx-log-out"></i>
            <span class="links_name">Log out</span>
          </a>
        </li>
      </ul>
    </div>

    <script>
      function dashboardSlideBar() {
        var dashboardSlideBar = document.getElementById("dashboardSlideBar")
        dashboardSlideBar.classList.toggle('dashboardSlidesToLeft')
        dashboardSlideBar.classList.toggle('dashboardDisplay')

      }

    </script>
  </body>
</html>
